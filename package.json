{
  "name": "onalog",
  "version": "1.0.0",
  "description": "Low-cost B2B lead discovery platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && yarn dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && yarn install && cd ../frontend && npm install",
    "build:frontend": "cd frontend && npm install && npm run build",
    "start:backend": "cd backend && yarn start",
    "kill-port": "lsof -ti:3000 | xargs kill -9 2>/dev/null || echo 'Port 3000 is free'",
    "dev:clean": "npm run kill-port && npm run dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:backend": "prettier --write \"backend/**/*.{js,json,md}\"",
    "format:frontend": "prettier --write \"frontend/**/*.{js,vue,json,css,md}\""
  },
  "keywords": ["lead-generation", "b2b", "scraping"],
  "author": "Placeholder LLC",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1"
  }
}

